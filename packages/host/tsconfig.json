{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["es2017"],
    "jsx": "react-native",
    "module": "es2020",
    "moduleResolution": "node",
    "types": ["react-native", "jest"],
    "resolveJsonModule": true,
    "allowJs": true,
    "noEmit": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "auth/AuthProvider": ["../../packages/auth/src/providers/AuthProvider"],
      "auth/SignInScreen": ["../../packages/auth/src/screens/SignInScreen"],
      "auth/*": ["../../packages/auth/src/*"]
    }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
